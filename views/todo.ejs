    <style>
      html, body {
  height: 100%;
}

body {
  display: -ms-flexbox;
  display: -webkit-box;
  display: flex;
  -ms-flex-align: center;
  -ms-flex-pack: center;
  -webkit-box-align: center;
  align-items: center;
  -webkit-box-pack: center;
  justify-content: center;
  padding-top: 40px;
  padding-bottom: 40px;
  background-color: #f5f5f5;
}

      h1 {
        font-family: 'Exo 2', sans-serif;
        font-size: 5rem;
      }
      
      a {
        color: red;
      }
.form-signin {
  width: 100%;
  max-width: 330px;
  padding: 15px;
  margin: 0 auto;
}
.form-signin .form-control {
  position: relative;
  box-sizing: border-box;
  height: auto;
  padding: 10px;
  font-size: 16px;
}
.form-signin .form-control:focus {
  z-index: 2;
}
.form-signin input[type="number"] {
  margin-bottom: -1px;
  border-bottom-right-radius: 0;
  border-bottom-left-radius: 0;
}
.form-signin input[type="password"] {
  margin-bottom: 10px;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}</style>
  </head>

    <body class="text-center">

        <% if (todolist.length < 1 && dailyGrams == undefined) { %>
      <form action="/todo/daily/" method="post" class="form-signin">
      <h1>Grams</h1>                             
        
        
        
        
        
        
                <input type="number" class="form-control" name="dailygs" placeholder="Indtast dagens antal gram" id="dailygs" autofocus />
                  <br><button class="btn btn-lg btn-primary btn-block" type="submit">Indsæt!</button>
      </form>  
        
        
        
        
        
        
        
        <% } else { %>
        <form action="/todo/add/" method="post" class="form-signin">
      <h1>Grams</h1>
<% todolist.forEach(function(todo, index) { %>
    <% sumGrams = sumGrams + Number(todo); %>
<% }); %>
          <p><strong><%= dailyGrams - sumGrams %></strong> ud af <strong><a href="/todo/daily/delete/" title="Reset daily grams" onclick="return confirm('Advarsel! Du er i gang med at starte forfra!')"><%= dailyGrams %></a></strong> gram tilbage. <br>Du har spist <strong><%= sumGrams %></strong> gram.<br>
  
          
                <p></p>
                <input type="number" class="form-control" name="newtodo" placeholder="Indsæt spiste gram" id="newtodo" autofocus />
                  <br><button class="btn btn-lg btn-primary btn-block" type="submit">Spis!</button>
            </p>
        
        <ul class="list-group">
        <% todolist.forEach(function(todo, index) { %>
            <li class="list-group-item"><a href="/todo/delete/<%= index %>" title="Delete" onclick="return confirm('Vil du slette dette?')"><i class="far fa-trash-alt" style="color: red;"></i></a> <a href="/todo/delete/<%= index %>" title="Delete" onclick="return confirm('Are you sure?')"><%= todo %></a></li>
        <% }); %>
        </ul>
      <% } %>
</form>
    </body>

</html>
