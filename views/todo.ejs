<!DOCTYPE html>
<% todolist.forEach(function(todo, index) { %>
    <% sumGrams = sumGrams + Number(todo); %></li>
<% }); %>
<html>
    <head>
        <title>Grams</title>

            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
            <link rel="stylesheet" href="/style.css">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.css">
    </head>

    <body class="text-center">
                     <div class="container-fluid">
   <div class="form-group">
          <h1 class="display-1">Grams</h1>

        <p><strong><%= dailyGrams - sumGrams %></strong> out of <strong><%= dailyGrams %></strong> grams are available for consumption. <br>You have eaten <strong><%= sumGrams %></strong> grams.<br><br>
  
          <br>
          
          <form action="/todo/add/" method="post">
            <p></p>
                <div class="input-group"><input type="number" class="form-control" name="newtodo" placeholder="Enter your eaten grams" id="newtodo" autofocus />
                  <button class="btn btn-primary">Add!</button></div>
            </p>
        </form>
        <ul style="list-style-position: inside;">
        <% todolist.forEach(function(todo, index) { %>
            <li><a href="/todo/delete/<%= index %>"><i class="far fa-trash-alt" style="color: red;"></i></a> <%= todo %></li>
        <% }); %>
        </ul>
      </div>
        
      </div>

      </div>
    </body>
</html>
